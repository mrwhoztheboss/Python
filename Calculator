class calculator:
    def add(self,a,b):
        return a+b
    def subtract(self,a,b):
        return a-b
    def multiply(self,a,b):
        return a*b
    def divide(self,a,b):
        return a/b

a = int(input("Enter 1st Number => "))
b = int(input("Enter 2nd Number => "))
calc = calculator()
n = int(input("Enter Choice 1.Add 2.Sub 3.Multiply 4.Divide => "))
if n==1:
    result = calc.add(a,b)
    print(result) 
elif n==2:
    result = calc.subtract(a,b)
    print(result)
elif n==3:
    result = calc.multiply(a,b)
    print(result)
else:
    result = calc.divide(a,b)
    print(result)

input("Press Enter ...")

